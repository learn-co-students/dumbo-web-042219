<p id="notice"><%= notice %></p>

<h1>Temperature Readings</h1>

<table>
  <thead>
    <tr>
      <th>Temperature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temperature_readings.each do |temperature_reading| %>
      <tr>
        <td><%= temperature_reading.temperature %></td>
        <td><%= link_to 'Show', temperature_reading %></td>
        <td><%= link_to 'Edit', edit_temperature_reading_path(temperature_reading) %></td>
        <td><%= link_to 'Destroy', temperature_reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Temperature Reading', new_temperature_reading_path %>
